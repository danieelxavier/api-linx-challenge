{
    "name": "api-linx-challenge",
    "description": "API developed for the proposed recruitment challenge",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "http://github.com/danieelxavier/api-linx-challenge",
    "authors": [
        {
            "name": "Daniel Xavier",
            "email": "danieelxavier@gmail.com",
            "homepage": "https://www.linkedin.com/in/danieelxavier/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "guzzlehttp/guzzle": ">=3.0",
        "bartosz-maciaszek/validation": "^1.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
